# Polymarket Weather Bot Configuration

# Trading mode: "paper" (default) or "live" (not implemented)
TRADING_MODE=paper

# Bet sizing
MIN_BET_USD=2.0
MAX_BET_USD=5.0
MAX_TRADES_PER_RUN=10
MAX_DAILY_RISK_USD=50.0
MAX_RISK_PER_CITY_USD=20.0

# Weather forecast source: "open_meteo" or "nws"
# NWS matches Polymarket resolution source - recommended for better alignment
WEATHER_SOURCE=nws

# Maximum bets per city/date to avoid correlated losses
MAX_BETS_PER_CITY_DATE=1

# Weather forecast uncertainty (standard deviation in Celsius)
FORECAST_SIGMA=2.0

# Database path
DB_PATH=data/trading.db

# Polymarket client type: "mock" or "real"
POLYMARKET_CLIENT=mock

# Polymarket API (for real client - not fully implemented)
# POLYMARKET_API_URL=https://clob.polymarket.com

# Discord notifications (optional - leave empty to disable)
DISCORD_WEBHOOK_URL=

# Logging level
LOG_LEVEL=INFO
